import java.util.Scanner; // importação do scanner

public class vinte { // atalho class
    public static void main(String[] args) { // atalho psvm
        Scanner input = new Scanner(System.in); // crição do scanner

        while (true) { // sistema de loop
            System.out.println("Insira um número apartir de 20 para obter seu o resultado do numero dividido por 2."); // mensagem ao usuário
            long numero = input.nextLong();

                if (numero >= 20) {
                    System.out.println(numero / 2.0); // divisão do valor válido
                } else {
                    System.out.println("Número inválido"); // valor inválido
                    break; // encerramento do loop
                }
        }
        input.close(); // encerramento do scanner
    }
}
